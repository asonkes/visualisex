{% extends 'base.html.twig' %}

{% block title %}Connexion
{% endblock %}

{% block body %}

	<div class="section">
		<form method="post">
			{% if error %}
				<div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
			{% endif %}

			<h1>Veuillez vous connecter</h1>

			<div class="flex-direction pt-3">
				<label for="username" class="py-2">E-mail</label>
				<input type="email" class="py-2" value="{{ last_username }}" name="_username" id="username" autocomplete="email" required autofocus>
			</div>
			<div class="flex-direction py-3">
				<label for="password" class="py-2">Mot de Passe</label>
				<input type="password" class="py-2" name="_password" id="password" autocomplete="current-password" required>
			</div>

			<input
			type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

			{#
																																																																															            Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
																																																																															            See https://symfony.com/doc/current/security/remember_me.html
																																																																															
																																																																															            <div class="checkbox mb-3">
																																																																															                <input type="checkbox" name="_remember_me" id="_remember_me">
																																																																															                <label for="_remember_me">Remember me</label>
																																																																															            </div>
																																																																															        #}

			<button class="btn btn-md btn-primary" type="submit">
				Se Connecter
			</button>
		</form>
	</div>

{% endblock %}
